import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        Scanner sc= new Scanner(System.in);
        int s=0;
        System.out.println("Enter the Number");
        int n=sc.nextInt();
        for(int i=1;i<=n;i++)
        {
            s=s+i;
        }
        System.out.println(s);
    }
}
